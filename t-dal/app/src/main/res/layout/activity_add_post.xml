<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPostActivity"
    android:background="@color/myWhite">
    <include
        android:id="@+id/add_post_page_toolbar"
        layout="@layout/app_bar_layout"

        >
    </include>

    <EditText
        android:id="@+id/courseNameText"
        android:layout_width="259dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="114dp"
        android:layout_marginRight="114dp"
        android:ems="10"
        android:hint=" Course name:     e.g. CSCI 8791"
        android:inputType="textPersonName"
        android:background="@drawable/inputs"/>

    <Spinner
        android:id="@+id/jobTitleSpinner"
        android:layout_width="259dp"
        android:layout_height="50dp"
        android:layout_below="@+id/courseNameText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/inputs"/>

    <EditText
        android:id="@+id/description_text"
        android:layout_width="259dp"
        android:layout_height="150dp"
        android:layout_below="@+id/jobTitleSpinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="  Description"
        android:inputType="textMultiLine"
        android:background="@drawable/inputs"/>

    <Button
        android:id="@+id/addJobPostButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_text"
        android:layout_marginTop="60dp"
        android:background="@drawable/button"
        android:text="Add job post"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>