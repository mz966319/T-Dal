<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTAProfileActivity"
    android:background="@color/myWhite">

    <include
    android:id="@+id/create_ta_toolbar"
    layout="@layout/app_bar_layout">
    </include>

    <TextView
        android:id="@+id/full_name_ta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:text="Full Name"
        android:textSize="20dp"
        android:fontFamily="arial"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/username_ta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/full_name_ta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="username"
        android:textSize="20dp"
        android:fontFamily="arial"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/email_ta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_ta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Email"
        android:textSize="20dp" />

    <Button
        android:id="@+id/upload_resume_ta"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_ta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Upload Resume"
        android:background="@drawable/button"
        android:layout_width="220dp"

        />

    <Button
        android:id="@+id/upload_record_ta"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upload_resume_ta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Upload Academic Record"
        android:background="@drawable/button"
        android:layout_width="220dp"/>

    <Button
        android:id="@+id/create_button_ta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_course_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/button"
        android:text="Create" />

    <EditText
        android:id="@+id/add_course_text"
        android:layout_width="155dp"
        android:layout_height="35dp"
        android:layout_below="@+id/upload_record_ta"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/courses_spinner"
        android:layout_toRightOf="@+id/courses_spinner"
        android:ems="10"
        android:hint="Add Course Name"
        android:inputType="textPersonName"
        android:background="@drawable/inputs"/>

    <Button
        android:id="@+id/add_course_button"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@+id/upload_record_ta"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="31dp"
        android:layout_toEndOf="@+id/add_course_text"
        android:layout_toRightOf="@+id/add_course_text"
        android:background="@drawable/button"
        android:text="ADD" />

    <Spinner
        android:id="@+id/courses_spinner"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@+id/upload_record_ta"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:gravity="center"
            android:layout_marginTop="7dp"
            android:fontFamily="arial"
            android:text="Create TA Profile"
            android:textColor="@color/black"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_marginLeft="70dp" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/logo" />
    </LinearLayout>



